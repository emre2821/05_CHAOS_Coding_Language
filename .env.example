# CHAOS Environment Configuration
# ================================
# Copy this file to .env and customize as needed.
# These environment variables are optional; CHAOS works without them.

# Logging
# -------
# Set log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# CHAOS_LOG_LEVEL=INFO

# Output directory for generated reports and dreams
# CHAOS_OUTPUT_DIR=./output

# Agent Configuration
# -------------------
# Default agent name for chaos-agent CLI
# CHAOS_AGENT_NAME=Eden

# Enable verbose agent output
# CHAOS_AGENT_VERBOSE=false

# Runtime Options
# ---------------
# Enable debug mode for detailed interpreter output
# CHAOS_DEBUG=false

# Maximum recursion depth for nested rituals
# CHAOS_MAX_DEPTH=100

# Business Integration
# --------------------
# Webhook URL for report notifications (optional)
# CHAOS_WEBHOOK_URL=

# API key for external integrations (optional)
# CHAOS_API_KEY=
